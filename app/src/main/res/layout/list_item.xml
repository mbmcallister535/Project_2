<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/placeCell"
    android:background="@color/background">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/bannerView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft ="10dp"
        android:text="Mars Cafe"
        android:id="@+id/nameView"
        android:layout_below="@+id/bannerView"
        android:layout_alignParentStart="true" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop ="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/ratingBar"
        android:rating = "5"
        android:numStars ="5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameView"
        android:layout_alignEnd="@+id/nameView" />

    <Button
        android:background="@android:color/transparent"
        android:paddingLeft = "10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:id="@+id/button"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/ratingBar"
        android:stateListAnimator="@null"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight = "10dp"
        android:text="250 ft"
        android:id="@+id/distanceText"
        android:layout_below="@+id/bannerView"
        android:layout_alignParentEnd="true"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/locationImage"
        android:src="@drawable/location_pin_solid"
        android:layout_toStartOf="@+id/distanceText"
        android:layout_alignBottom="@+id/distanceText"
        android:layout_below="@+id/bannerView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_border_black_24px"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:id="@+id/empty_fav" />


</RelativeLayout>